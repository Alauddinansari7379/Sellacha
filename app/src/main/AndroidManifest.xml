<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.sellacha">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".app.SellAchaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sellacha"
        tools:targetApi="31">
        <activity
            android:name=".Profile.activity.UserDetails"
            android:exported="false" />
        <activity
            android:name=".Profile.activity.ChangePassword"
            android:exported="false" />
        <activity
            android:name=".activity.CreateForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activity.OtpActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ForgotPassword"
            android:exported="true" />
        <activity
            android:name=".activity.CheckOut"
            android:exported="true" />
        <activity
            android:name=".Profile.activity.ProfileActivity"
            android:exported="true" />
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".LogIn.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
             android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.HomeDashBoard"
            android:exported="true" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.InvoiceActivity"
            android:exported="false" />
        <activity
            android:name=".activity.StoreInformationActivity"
            android:exported="true" />
    </application>

</manifest>