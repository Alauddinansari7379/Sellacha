<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_bg"
        tools:context=".G.whatsapp_api_configuration">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/parentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/top_curve_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/whatsappApiLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Whatsapp API"
                        android:textColor="#0191B5"
                        android:textSize="@dimen/_22sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.047" />

                    <TextView
                        android:id="@+id/whatsappNoLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:padding="@dimen/_6sdp"
                        android:text="Whatsapp Number"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/whatsappApiLb"
                        app:layout_constraintTop_toBottomOf="@+id/whatsappApiLb" />

                    <TextView
                        android:id="@+id/pretextForProdLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_6sdp"
                        android:text="Pretext For Product Page"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/whatsappApiLb"
                        app:layout_constraintTop_toBottomOf="@+id/txtWhatsappNo" />

                    <TextView
                        android:id="@+id/OtherPagePreLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_6sdp"
                        android:text="Other Page Pretext"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/whatsappApiLb"
                        app:layout_constraintTop_toBottomOf="@+id/pretextBelowTxt" />

                    <EditText
                        android:id="@+id/txtWhatsappNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:backgroundTint="@color/light_gray"
                        android:ems="10"
                        android:fontFamily="@font/noto_sans_regular"
                        android:hint="123456789"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_5sdp"

                        android:textColor="#946A6363"
                        android:textCursorDrawable="@drawable/search_cursor"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/whatsappApiLb"
                        app:layout_constraintTop_toBottomOf="@+id/whatsappNoLb" />


                    <TextView
                        android:id="@+id/statusLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_6sdp"
                        android:text="Status"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/whatsappApiLb"
                        app:layout_constraintTop_toBottomOf="@+id/txtOtherPagePre" />

                    <EditText
                        android:id="@+id/txtPretextForProd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/light_gray"
                        android:ems="10"
                        android:fontFamily="@font/noto_sans_regular"
                        android:hint="i want to purchase this product"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_6sdp"

                        android:textColor="#946A6363"
                        android:textCursorDrawable="@drawable/search_cursor"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtWhatsappNo"
                        app:layout_constraintStart_toStartOf="@+id/whatsappNoLb"
                        app:layout_constraintTop_toBottomOf="@+id/pretextForProdLb" />


                    <TextView
                        android:id="@+id/pretextBelowTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_6sdp"
                        android:text="The Api Text Will Append Like This: i want to purchase\nthis product\nhttp::/url.com/product-name"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtPretextForProd"
                        app:layout_constraintStart_toStartOf="@+id/whatsappApiLb"
                        app:layout_constraintTop_toBottomOf="@+id/txtPretextForProd" />

                    <EditText
                        android:id="@+id/txtOtherPagePre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/light_gray"
                        android:ems="10"
                        android:fontFamily="@font/noto_sans_regular"
                        android:hint="Hello I have a query"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_6sdp"
                        android:textColor="#946A6363"
                        android:textCursorDrawable="@drawable/search_cursor"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtPretextForProd"
                        app:layout_constraintStart_toStartOf="@+id/OtherPagePreLb"
                        app:layout_constraintTop_toBottomOf="@+id/OtherPagePreLb" />


                    <EditText
                        android:id="@+id/txtStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/light_gray"
                        android:drawableEnd="@drawable/icn_drop_arrow"
                        android:ems="10"
                        android:enabled="false"
                        android:fontFamily="@font/noto_sans_regular"
                        android:hint="Enable"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_6sdp"
                        android:textColor="#946A6363"
                        android:textCursorDrawable="@drawable/search_cursor"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtPretextForProd"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/whatsappApiLb"
                        app:layout_constraintTop_toBottomOf="@+id/statusLb" />

                    <Button
                        android:id="@+id/saveBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_20sdp"
                        android:background="@drawable/btn_background"
                        android:gravity="center"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtStatus"
                        tools:ignore="UnknownIdInLayout" />

                    <TextView
                        android:id="@+id/note"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_6sdp"
                        android:text="Note:After You Update Settings The Action Will Work
After 5 Minutes"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtPretextForProd"
                        app:layout_constraintStart_toStartOf="@+id/whatsappApiLb"
                        app:layout_constraintTop_toBottomOf="@+id/saveBtn" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>