<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/top_curve_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="0dp">


                <TextView
                    android:id="@+id/addCatgLb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Payment Option"
                    android:textColor="#0191B5"
                    android:textSize="@dimen/_22sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nameLb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_6sdp"
                    android:text="Setting"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textColor="@color/heading_font"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="@+id/addCatgLb"
                    app:layout_constraintTop_toBottomOf="@+id/addCatgLb" />

                <Button
                    android:id="@+id/btnManual"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"                    android:background="@drawable/btn_background"
                    android:gravity="center"
                    android:text="Manual Payment"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNoFile"
                    app:layout_constraintVertical_bias="0.083"
                    tools:ignore="UnknownIdInLayout" />
                <Button
                    android:id="@+id/btnAlternative"
                     android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                     android:background="@drawable/btn_background"
                    android:gravity="center"
                    android:text="Alternative Payments"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNoFile"
                    app:layout_constraintVertical_bias="0.083"
                    tools:ignore="UnknownIdInLayout" />


                <LinearLayout
                    android:id="@+id/layoutCOD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/skipLb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20sdp"
                         android:text="COD"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                  />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_20sdp"
                                 android:layout_weight="1"
                                android:text="description"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                />
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@color/green">
                                <LinearLayout
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:gravity="center"
                                    android:background="@color/green">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="25dp"
                                        android:background="@drawable/ic_baseline_edit_24"
                                        android:backgroundTint="@color/white"
                                        android:layout_height="25dp">

                                    </androidx.appcompat.widget.AppCompatImageView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                              android:text="installed"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>

                </LinearLayout>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layoutAlternative"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                         android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20sdp"
                         android:text="INSTAMOJO"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                  />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_20sdp"
                                 android:layout_weight="1"
                                android:text="description"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                />
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardInstamojo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@color/green">
                                <LinearLayout
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:gravity="center"
                                    android:background="@color/green">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="25dp"
                                        android:background="@drawable/ic_baseline_edit_24"
                                        android:backgroundTint="@color/white"
                                        android:layout_height="25dp">

                                    </androidx.appcompat.widget.AppCompatImageView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                              android:text="installed"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                         android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20sdp"
                         android:text="RAZORPAY"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                  />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_20sdp"
                                 android:layout_weight="1"
                                android:text="description"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                />
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardRazorpay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@color/green">
                                <LinearLayout
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:gravity="center"
                                    android:background="@color/green">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="25dp"
                                        android:background="@drawable/ic_baseline_edit_24"
                                        android:backgroundTint="@color/white"
                                        android:layout_height="25dp">

                                    </androidx.appcompat.widget.AppCompatImageView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                              android:text="installed"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                         android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20sdp"
                         android:text="PAYPAL"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                  />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_20sdp"
                                 android:layout_weight="1"
                                android:text="description"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                />
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardPaypal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@color/green">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    >

                                    <androidx.appcompat.widget.AppCompatButton
                                        android:layout_width="wrap_content"
                                        android:background="@drawable/btn_background"
                                         android:layout_height="@dimen/_25sdp"
                                        android:text="Install"
                                        android:textColor="@color/white"
                                        android:textAllCaps="false">

                                    </androidx.appcompat.widget.AppCompatButton>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                              android:text="installed"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>

                </LinearLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>