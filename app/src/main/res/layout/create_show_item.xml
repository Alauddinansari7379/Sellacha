<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImgShow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/icn_image" />

                <TextView

                    android:id="@+id/nameShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_regular"
                    android:gravity="center"
                    android:text="Singer"
                    android:textColor="@color/primary_bg"
                    android:textSize="@dimen/_11sdp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/priceShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans_regular"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="00"
                android:textColor="@color/primary_bg"
                android:textSize="@dimen/_11sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans_regular"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@color/primary_bg"
                android:textSize="14sp">

                <EditText
                    android:id="@+id/stockManageTv"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                     android:fontFamily="@font/noto_sans_regular"
                    android:gravity="center"
                    android:inputType="number"
                     android:text="1"
                    android:textColorHint="@color/_6E7D86"
                    android:textColor="@color/primary_bg"
                    android:textSize="@dimen/_11sdp" />
                <TextView
                    android:id="@+id/tvAddToCart"
                     android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/cart"
                    android:fontFamily="@font/noto_sans_regular"
                    android:gravity="center"
                    android:layout_marginStart="10sp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                     android:textColor="@color/white"
                   />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/table_titlebg" />
    </LinearLayout>
</layout>