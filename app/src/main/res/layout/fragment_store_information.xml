<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/parentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <TextView
                        android:id="@+id/storeInfoLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/store_information"
                        android:textColor="#0191B5"
                        android:textSize="@dimen/_22sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/businessnameLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Business Name"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/storeInfoLb" />

                    <TextView
                        android:id="@+id/mobNoLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Mobile Number"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/txtBusinessName" />

                    <TextView
                        android:id="@+id/passwordLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Select Shop Type"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/txtMobNo" />


                    <TextView
                        android:id="@+id/referralNoLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Referral Number"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/txtPassword" />

                    <TextView
                        android:id="@+id/referralNoLbn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="(Optional)"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/referralNoLb"
                        app:layout_constraintStart_toEndOf="@+id/referralNoLb"
                        app:layout_constraintTop_toBottomOf="@+id/txtPassword" />

                    <TextView
                        android:id="@+id/EmailLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Email"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/txtReferralNo" />


                    <TextView
                        android:id="@+id/selectProductTpLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Password"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

                    <TextView
                        android:id="@+id/PasswordConLb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Password Confirmation"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/txtproductTxt" />

                    <TextView
                        android:id="@+id/passwordConLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Select Service Type"
                        android:textColor="@color/heading_font"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@+id/PasswordConLb2"
                        app:layout_constraintTop_toBottomOf="@+id/txtPasswordCon" />

                    <EditText
                        android:id="@+id/txtBusinessName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:backgroundTint="@color/light_gray"
                        android:fontFamily="@font/noto_sans_regular"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#946A6363"
                        android:textCursorDrawable="@drawable/search_cursor"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/businessnameLb" />

                    <EditText
                        android:id="@+id/txtReferralNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/light_gray"
                        android:ems="10"
                        android:fontFamily="@font/noto_sans_regular"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#946A6363"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtPassword"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/referralNoLb" />

                    <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/light_gray"
                        android:fontFamily="@font/noto_sans_regular"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#946A6363"
                        android:textCursorDrawable="@drawable/search_cursor"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtReferralNo"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/EmailLb" />

                    <EditText
                        android:id="@+id/txtproductTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/noto_sans_regular"
                        android:inputType="textPassword"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#946A6363"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtEmail"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/selectProductTpLb" />

                    <EditText
                        android:id="@+id/txtPasswordCon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/light_gray"
                        android:fontFamily="@font/noto_sans_regular"
                        android:inputType="textPassword"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#946A6363"
                        android:textCursorDrawable="@drawable/search_cursor"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtproductTxt"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/PasswordConLb2"
                        app:layout_constraintTop_toBottomOf="@+id/PasswordConLb2" />

                    <Spinner
                        android:id="@+id/txtselectshoptp"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/light_gray"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:ems="10"
                        android:enabled="false"
                        android:fontFamily="@font/noto_sans_regular"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#946A6363"
                        android:textCursorDrawable="@drawable/search_cursor"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtPasswordCon"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/passwordConLb"
                        app:layout_constraintTop_toBottomOf="@+id/passwordConLb" />

                    <EditText
                        android:id="@+id/txtMobNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/light_gray"
                        android:ems="12"
                        android:fontFamily="@font/noto_sans_regular"
                        android:inputType="number"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#946A6363"
                        android:textCursorDrawable="@drawable/search_cursor"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtBusinessName"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/mobNoLb" />

                    <Spinner
                        android:id="@+id/txtPassword"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/light_gray"
                        android:ems="10"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:fontFamily="@font/noto_sans_regular"
                        android:inputType="textPersonName"
                        android:textColor="#946A6363"
                        android:textCursorDrawable="@drawable/search_cursor"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/txtMobNo"
                        app:layout_constraintStart_toStartOf="@+id/storeInfoLb"
                        app:layout_constraintTop_toBottomOf="@+id/passwordLb" />


                    <Button
                        android:id="@+id/saveBtn"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/btn_background"
                        android:gravity="center"
                        android:text="Save &amp; Next"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtselectshoptp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
