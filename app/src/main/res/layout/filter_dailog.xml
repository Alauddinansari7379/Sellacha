<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_transprate">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_450sdp"
            android:layout_margin="@dimen/_18sdp"
            android:background="@drawable/white_10bg"
            android:elevation="@dimen/_2sdp"
            android:padding="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".4">

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Filters"
                android:textColor="@color/primary_bg"
                android:textSize="@dimen/_17sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/paymentStatusLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Payment status"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="@+id/heading"
                app:layout_constraintTop_toBottomOf="@+id/heading" />


            <TextView
                android:id="@+id/paymentStatusTxt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:background="@drawable/edit_txt_bg"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/heading_font"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/paymentStatusLb"
                app:layout_constraintTop_toBottomOf="@+id/paymentStatusLb" />


            <TextView
                android:id="@+id/fulfilmentstatusLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Fulfilment Status"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="@+id/heading"
                app:layout_constraintTop_toBottomOf="@+id/paymentStatusTxt" />


            <TextView
                android:id="@+id/fulfilmentstatusTxt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:background="@drawable/edit_txt_bg"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/heading_font"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/paymentStatusTxt"
                app:layout_constraintStart_toStartOf="@+id/paymentStatusLb"
                app:layout_constraintTop_toBottomOf="@+id/fulfilmentstatusLb" />

            <TextView
                android:id="@+id/startingDateLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Starting Date"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="@+id/heading"
                app:layout_constraintTop_toBottomOf="@+id/fulfilmentstatusTxt" />


            <TextView
                android:id="@+id/startingDateTxt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:background="@drawable/edit_txt_bg"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/semi_title_font"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/fulfilmentstatusTxt"
                app:layout_constraintStart_toStartOf="@+id/paymentStatusLb"
                app:layout_constraintTop_toBottomOf="@+id/startingDateLb" />


            <TextView
                android:id="@+id/endingDateLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Ending Date"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="@+id/heading"
                app:layout_constraintTop_toBottomOf="@+id/startingDateTxt" />


            <TextView
                android:id="@+id/endingDateTxt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:background="@drawable/edit_txt_bg"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/semi_title_font"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/startingDateTxt"
                app:layout_constraintStart_toStartOf="@+id/paymentStatusLb"
                app:layout_constraintTop_toBottomOf="@+id/endingDateLb" />

            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/primary_color_bg_10dp"
                android:backgroundTint="#88BDC6CC"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Clear"
                android:textAllCaps="false"
                android:textColor="@color/primary_bg"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/okBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/endingDateTxt" />

            <Button
                android:id="@+id/okBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/primary_color_bg_10dp"
                android:padding="@dimen/_10sdp"
                android:text="Fliter"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="@+id/cancelBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cancelBtn"
                app:layout_constraintTop_toTopOf="@+id/cancelBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
