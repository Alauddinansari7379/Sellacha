<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_curve_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:paddingTop="@dimen/_10sdp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/filterRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15ssp"

                        android:fontFamily="@font/noto_sans_medium"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/brands"
                        android:textColor="@color/primary_bg"
                        android:textSize="@dimen/_18sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/card_bg"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="@dimen/_15ssp"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/fields_bg"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_weight="5"
                                    android:background="@color/white"
                                    android:enabled="false"
                                    android:hint="@string/select_action"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:textSize="@dimen/_12sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/selection_arrow"
                                    app:tint="@color/_6E7D86" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_7sdp"
                                    android:background="@drawable/seleceted_item_bg"
                                    android:fontFamily="@font/noto_sans_regular"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/submit"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white" />

                            </LinearLayout>


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/orderDetailLL"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:background="#BFEBEBEB"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <RadioButton
                                    android:id="@+id/orderRbtn"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:layout_editor_absoluteX="5dp" />

                                <ImageView
                                    android:id="@+id/orderNames"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:fontFamily="@font/noto_sans_regular"
                                    android:src="@drawable/icn_image"
                                    app:layout_constraintEnd_toStartOf="@id/name"
                                    app:layout_constraintStart_toEndOf="@+id/orderRbtn"
                                    app:tint="@color/_6E7D86"
                                    tools:layout_editor_absoluteY="5dp" />

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/noto_sans_bold"
                                    android:gravity="center"
                                    android:text="Name"
                                    android:textColor="@color/_324754"
                                    android:textSize="14sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/orderNames"
                                    tools:layout_editor_absoluteY="5dp" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/reviewRatingRc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                android:nestedScrollingEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/bucketBtn"
                                tools:listitem="@layout/brans_item" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>